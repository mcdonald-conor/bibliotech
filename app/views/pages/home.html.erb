<div class="search-container">
  <%= form_with url: "#", method: :get, local: true, class: "search-form" do |form| %>
    <div class="search-wrapper">
      <%= form.text_field :query, placeholder: "who inspires you?", class: "search-input" %>
      <button type="submit" class="search-button">
        <img src="path/to/image.png" alt="Search">
      </button>
    </div>
  <% end %>
</div>
